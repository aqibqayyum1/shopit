<h1 style="text-align: center;background-color: lightgreen;">Create New Category</h1>

<%= form_with scope: :category, url: categories_path, local: true do |form| %>

<%= render 'errors' %>
  <p>
   <label> <%= form.label :name %><br></label>
    <%= form.text_area :name ,class: 'form-control'%>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>